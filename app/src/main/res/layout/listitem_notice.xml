<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_height="90dp">

    <com.somesame.framework.widget.CircleImageView
        android:layout_width="50dp"
        android:id="@+id/iv_face"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_face5"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_face"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="小倩"
            android:textSize="15dp"
            android:textColor="@color/text_color_black"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="厉害了，我的小姐姐！"
            android:textSize="13dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_color_gary"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="今天20：30"
            android:textSize="13dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_color_gary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_face2"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_height="70dp">

    </ImageView>
</RelativeLayout>