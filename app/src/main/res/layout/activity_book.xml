<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.somesame.somesame.ui.login.LoginActivity">
    <com.somesame.somesame.widget.FrameLayout4Loading
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <com.somesame.framework.widget.CircleImageView
                            android:layout_width="50dp"
                            android:src="@mipmap/ic_face"
                            android:layout_height="50dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="作者"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="6-15 20:30"
                                android:textSize="13dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_gary"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_black"
                        android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它 \n --阿尔伯特   爱因斯坦 "
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_width="match_parent"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_black"
                        android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它 \n --阿尔伯特   爱因斯坦 "
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_margin="@dimen/margin"
                        android:layout_width="match_parent"
                        android:textSize="16dp"
                        android:textColor="@color/text_color_black"
                        android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它 \n --阿尔伯特   爱因斯坦 "
                        android:layout_height="wrap_content" />
                    <com.somesame.framework.widget.ijkplayer.VideoPlayerIJK
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                    </com.somesame.framework.widget.ijkplayer.VideoPlayerIJK>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@mipmap/ic_face2"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_height="300dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="18dp"
                                android:src="@mipmap/ic_msg"
                                android:layout_height="18dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="评论123"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="18dp"
                                android:src="@mipmap/ic_zan"
                                android:layout_height="18dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="赞668"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="18dp"
                                android:src="@mipmap/ic_reward"
                                android:layout_height="18dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="打赏"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="18dp"
                                android:src="@mipmap/ic_forward"
                                android:layout_height="18dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="转发"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_color_black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </com.somesame.somesame.widget.FrameLayout4Loading>
</LinearLayout>
