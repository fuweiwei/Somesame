<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.somesame.somesame.ui.login.LoginActivity">
    <com.somesame.somesame.widget.FrameLayout4Loading
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fragment_bar"
                android:layout_width="match_parent"
                android:layout_above="@+id/lin_bar"
                android:layout_height="match_parent"></FrameLayout>

            <LinearLayout
                android:id="@+id/lin_bar"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:layout_height="45dp">
                <LinearLayout
                    android:id="@+id/lin_bar_home"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bar_selector_home"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        style="@style/bar_text_red"
                        android:layout_marginTop="2dp"
                        android:text="首页"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_bar_msg"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_msg"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bar_selector_msg"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_msg"
                        android:layout_width="wrap_content"
                        style="@style/bar_text_gray"
                        android:layout_marginTop="2dp"
                        android:text="消息"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_bar_nav"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_nav"
                        android:layout_width="35dp"
                        android:src="@mipmap/ic_bar_nav"
                        android:layout_height="35dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_bar_world"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_world"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bar_selector_world"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_world"
                        android:layout_width="wrap_content"
                        style="@style/bar_text_gray"
                        android:layout_marginTop="2dp"
                        android:text="次元世界"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_bar_mine"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_mine"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bar_selector_mine"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_mine"
                        android:layout_width="wrap_content"
                        style="@style/bar_text_gray"
                        android:layout_marginTop="2dp"
                        android:text="我的"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </com.somesame.somesame.widget.FrameLayout4Loading>
</RelativeLayout>
